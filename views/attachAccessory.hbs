<h1>Attach Accessory</h1>
<div class="form">
    <h2>{{car.name}}</h2>
    <img src="/static/images/{{car.imageUrl}}" alt="" class="cube">
    {{#if accessories}}
    <form action="/attach/accessory/{{car.id}}" method="post">
        <label for="accessory">Accessories</label>
        <select name="accessory" id="accessory">
            {{#each accessories}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Attach">
    </form>
    {{/if}}
</div>